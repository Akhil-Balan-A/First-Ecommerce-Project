
<%- include('../layouts/header') %>


    <title>Reset Password</title>
  

  <body>
    <!-- Content -->

    <div class="container-xxl">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-4">
          <!-- reset Password -->
          <div class="card">
            <div class="card-body">
              <!-- Logo -->
              <div class="app-brand justify-content-center">
                <a href="/" class="app-brand-link gap-2">
                  <span class="app-brand-logo demo">
                    <img class="brand-logo-main" src="/Icon/brand logo.png" alt="img">
                  </span>
                  <span class="app-brand-text demo text-body fw-bold">Boult</span>
                </a>
              </div>
              <!-- /Logo -->
              <h4 class="mb-2">Reset User Password ðŸ”’</h4>
              <p class="mb-4">Enter your new password below</p>
              <% if (typeof message !== 'undefined') { %>
                <% if(color==='danger') { %>
                    <div class="alert alert-danger text-center" role="alert">
                        <p><%- message %></p>
                    </div>
                <% } else { %>
                    <div class="alert alert-success text-center" role="alert">
                        <p><%- message %></p>
                    </div>
                <% } %>
            <% } %>
              <form id="formAuthentication" class="mb-3" action="/forgot-password" method="post">
                <div class="mb-3 form-password-toggle">
                  <label class="form-label" for="password">Password</label>
                  <div class="input-group input-group-merge">
                    <input
                      type="password"
                      id="password"
                      class="form-control"
                      name="password"
                      required
                      placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                      aria-describedby="password" />
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                  </div>
                </div>
                <input type="hidden" name="user_id" value="<%=user_id%>">
                <button class="btn btn-primary d-grid w-100">Reset Password</button>
              </form>
              <div class="text-center">
                <a href="/login" class="d-flex align-items-center justify-content-center">
                  <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                  Login?
                </a>
                
              </div>
            </div>
          </div>
          <!-- /reset Password -->
        </div>
      </div>
    </div>
<%- include('../layouts/footer') %>







