<%- include('../layouts/header.ejs') %>
<title>Registration</title>


<div class="container mt-5 col-md-5">
  <h1 class="text-center">User Registration Form</h1>

  <form action="register" method="post" class="mt-4">
    <div class="mb-3 " >
      <input type="text" name="firstName" class="form-control" placeholder="Enter First Name" required minlength="2" maxlength="20">
    </div>
    <div class="mb-3">
      <input type="text" name="lastName" class="form-control" placeholder="Enter Last Name" required minlength="2" maxlength="20">
    </div>
    <div class="mb-3">
      <input type="email" name="email" class="form-control" placeholder="Enter Email" required minlength="2" maxlength="20">
    </div>
    <div class="mb-3">
      <input type="text" name="phoneNumber" class="form-control" placeholder="Enter Phone Number" required minlength="10" maxlength="10">
    </div>
    <div class="mb-3">
      <input type="password" name="password" class="form-control" placeholder="Enter Password" required minlength="8">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>

  <p class="mt-3 text-left"><a href="login">Login Here</a></p>

  <% if(typeof message !== 'undefined'){ %>
    <p style="color: green;" class="text-center"><%- message %></p>
  <% } %>
</div>

<%- include('../layouts/footer.ejs') %>
