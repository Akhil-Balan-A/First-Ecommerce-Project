<%- include('../layouts/header.ejs') %>
<title>Product Details</title>

<div class="container mt-4">
  <div class="row">
    <div class="col-lg-12">
      <% if (product) { %>
        <div class="card">
          <div class="row g-0">
            <div class="col-md-6">
              <img src="/images/<%= product.images[0] %>" class="img-fluid rounded-start" alt="<%= product.name %>">
              
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <!-- Star Ratings -->
                
                <div class="rating">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <% if (i <= product.rating) { %>
                      <span class="fa fa-star checked"></span>
                    <% } else { %>
                      <span class="fa fa-star"></span>
                    <% } %>
                  <% } %>
                </div>
                <br>
                <p class="card-text"> <span style="text-decoration: line-through;">₹<%= product.price %></span>  <span style="color: green;font-size: large;"><%=product.discount%>% off</span></p> 
                <strong class="card-text">Price: ₹<%= product.sellingPrice %></strong>

                <!-- <p class="card-tex ">Stock Quantity: <%= product.stockQuantity %></p> -->
                <!-- Additional details specific to your product model -->
                <!-- Add more details here based on your product model fields -->
                <div class="my-2 text-center d-flex justify-content-left ">
                  <form action="/cart" method="post">
                    <input type="hidden" value="<%= product._id %>" name="productId">
                    <button class="btn btn-primary mx-2">Add to Cart</button>
                  </form>
                  <a href="/order/checkout?productId=<%= product._id %>" class="btn btn-primary">Buy Now</a>
                </div>
                

                
              </div>
            </div>
          </div>
        </div>
      <% } else { %>
        <p>No product details available.</p>
      <% } %>
    </div>
  </div>
  <br>
</div>


<%- include('../layouts/footer.ejs') %>
