<%include('../layouts/header.ejs')%>

<a href="/admin/new-user">Add new User</a>
<br>

<h1>Dashboard</h1>


<form >
    <input type="text" placeholder="Search User name, email, mobile " name="search">
    <input type="submit" value="Search">
</form>


<table style="width: 50%;">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Staus</th>
        <th>Action</th>
    </tr>
    <% 
        if(users.length>0){
            for(let i=0;i<users.length;i++ ){
                %>
                    <tr>
                        <td><%-users[i].firstName%></td>
                        <td><%-users[i].email%></td>    
                        <td><%-users[i].phoneNumber%></td>
                        <td><%
                            if(users[i].is_verified === false){
                                %>
                                <p>Not Verified</p>
                                <%
                            }else{
                                %>
                                <p>Verified</p>
                                <%
                                
                            }
                            %></td>
                            <td>
                              
                                <% if (!users[i].is_blocked) { %>
                                <a href="/admin/Block-user/<%= users[i]._id %> "
                                onclick="return confirm('Do you want to block <%= users[i].firstName %> ?')"
                                >Block</a>

                                <% } else { %>
                                <a href="/admin/Unblock-user/<%= users[i]._id %> "
                                >Unblock</a>

                                <% } %>
                                   
                            </td>
                    </tr>
                <%
            }
        }else{
            %>
            <tr>
                <td colspan="5"> Users Not Found</td>    
            </tr>

            <%
        }
    %>

</table>
<br>
<%
    for(let j=1;j<=totalPages;j++){
        %>

        <a href="?page=<%= j %>"><%= j %></a>

        <%
    }

%>
<br><br>
<a href="/admin/home">Go to Home</a>

