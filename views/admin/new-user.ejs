<%- include('../layouts/adminHeader.ejs') %>

<div class="container mt-5 col-md-5">
  <h1>Add New User</h1>

  <form action="/admin/new-user" method="post">
    <div class="mb-3">
      <input type="text" class="form-control" name="firstName" placeholder="Enter First Name" required>
    </div>

    <div class="mb-3">
      <input type="text" class="form-control" name="lastName" placeholder="Enter Last Name" required>
    </div>

    <div class="mb-3">
      <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
    </div>

    <div class="mb-3">
      <input type="text" class="form-control" name="phoneNumber" placeholder="Enter Phone Number" required>
    </div>

    <button type="submit" class="btn btn-primary">Add User</button>
  </form>

  <% if(typeof message !== 'undefined') { %>
    <p class="mt-3" style="color: rgb(128, 58, 0);"><%- message %></p>
  <% } %>

  <a class="mt-3 btn btn-secondary" href="/admin/dashboard">Go Back</a>
</div>

<% include('../layouts/adminFooter.ejs') %>
